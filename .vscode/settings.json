{
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/.git/**": true,
        "**/.mypy_cache/**": true,
        "**/.pytest_cache/**": true,
        "**/.ruff_cache/**": true,
        "**/build/**": true,
        "**/dist/**": true,
        "*.whl": true
    },
    "files.exclude": {
        "**/__pycache__/**": true,
        "**/.git/**": true,
        "**/.mypy_cache/**": true,
        "**/.pytest_cache/**": true,
        "**/.ruff_cache/**": true,
        "**/build/**": true,
        "**/dist/**": true,
        "*.whl": true
    },
    "search.exclude": {
        "**/__pycache__/**": true,
        "**/.git/**": true,
        "**/.mypy_cache/**": true,
        "**/.pytest_cache/**": true,
        "**/.ruff_cache/**": true,
        "**/build/**": true,
        "**/dist/**": true,
        "*.whl": true
    },
    "python.testing.unittestEnabled": true,
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./test",
        "-p",
        "*_test.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.cwd": "${workspaceFolder}"
}
